[alias]
	st = status
	sti = status --ignore-submodules
	stu = status -uno
	co = checkout
	cob = checkout -b
	ci = commit
	cinv = commit --no-verify
	cine = commit --no-edit
	cia = commit --amend
	ciae = commit --amend --no-edit
	ciav = commit --amend --no-verify
	ciaev = commit --amend --no-edit --no-verify
	mff = merge --ff-only
	ri = rebase -i
	pur = pull --rebase
	pns = pull --no-recurse-submodules
	pnsr = pull --rebase --no-recurse-submodules
	lob = log --branches --graph --oneline
	loo = log --oneline --graph
	dc = diff --cached
	fp = fetch -p

[core]
	editor = /usr/bin/vim
	pager = /usr/bin/less -+$LESS -R
	whitespace = blank-at-eol,space-before-tab,blank-at-eof,tabwidth=8
	safecrlf = warn

[color]
	ui = true

[diff]
	tool = vimdiff

[difftool]
	prompt = false

[merge]
	tool = vimdiff
	conflictstyle = diff3

[mergetool]
	prompt = false

[grep]
	lineNumber = true

[log]
	decorate = auto

[rebase]
	autoStash = true
	abbreviateCommands = true

[status]
	showStash = true

[color]
	ui = auto

[color "branch"]
	current = cyan bold reverse
	local = white
	plain =
	remote = cyan

[color "diff"]
	commit = yellow
	func = cyan
	plain =
	whitespace = magenta reverse
	meta = white
	frag = cyan bold reverse
	old = red
	new = green

[color "grep"]
	context =
	filename =
	function =
	linenumber = white
	match =
	selected =
	separator =

[color "interactive"]
	error =
	header =
	help =
	prompt =

[color "status"]
	added = green bold
	changed = yellow bold
	header =
	localBranch =
	nobranch =
	remoteBranch = cyan bold
	unmerged = magenta bold reverse
	untracked = red bold
	updated = green bold

[include]
	path = ~/.config/git/config_sensitive.conf
